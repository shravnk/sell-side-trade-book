            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button> -->
        
        
        <% if !current_user %>
          <a class="navbar-brand" href="<%= new_user_path %>"/>Sign Up</a>
          <%= link_to "Log in", signin_path, class:"navbar-brand" %>
        <% end %>
        <% if current_user %>
        <a class="navbar-brand" href="<%= home_path %>"/>Home</a>
        <%= link_to "Clients", clients_path, class: "navbar-brand" %>
        <%= link_to "Traders", traders_path, class: "navbar-brand" %>
        <%= link_to "Clients", salespeople_path, class: "navbar-brand" %>
        <%= link_to "Log Out", sessions_path, class:"navbar-brand",method:'delete' %>
        <% end %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
