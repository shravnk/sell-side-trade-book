<!DOCTYPE html>
<html>
  <head>
    <title>Bond Desk</title>

    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag 'style', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> 
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
        
        <% if !current_user %>
          <a class="navbar-brand" href="<%= new_user_path %>"/>Sign Up</a>
          <%= link_to "Log in", signin_path, class:"navbar-brand" %>
        <% end %>
        <% if current_user %>
        <a class="navbar-brand" href="<%= home_path %>"/>Home</a>
        <%= link_to "Bonds", bonds_path, class: "navbar-brand" %>
        <%= link_to "Trades", transacts_path, class: "navbar-brand" %>
        <%= link_to "Clients", clients_path, class: "navbar-brand" %>
        <%= link_to "Traders", traders_path, class: "navbar-brand" %>
        <%= link_to "Salespeople", salespeople_path, class: "navbar-brand" %>
        <%= link_to "Log Out", sessions_path, class:"navbar-brand",method:'delete' %>
        <% end %>
        </div>
      </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
  </body>
</html>
