<%= form_for(@transact) do |f| %>

  <div class="form-group">
    <%= f.label :size %><br>
    <%= f.number_field :size, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :bond_id %><br>
    <%= f.collection_select :bond_id, Bond.order(:ticker), :id, :ticker, {}, {class: "form-control"} %>
  </div>

   <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control" %>
  </div>
   
   <div class="form-group">
    <%= f.label :trader_id %><br>
    <%= f.collection_select :trader_id, Trader.order(:name), :id, :name, {}, {class: "form-control"} %>
   </div>

   <div class="form-group">
    <%= f.label :client_id %><br>
    <%= f.collection_select :client_id, Client.order(:name), :id, :name, {}, {class: "form-control"} %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>