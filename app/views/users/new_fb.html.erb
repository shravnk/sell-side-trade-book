<% binding.pry %>
<%= form_for @user do |f| %>

   <div class="form-group">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= f.label :username %>
    <br>
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "I am a:" %><br>
    <%= f.select :user_type, ["Trader", "Salesperson"], {class: "form-control"} %>
  </div>

  <div class="actions">
    <br/>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>