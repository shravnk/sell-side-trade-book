<%= render 'templates/index', collection: @items %>
<div class="col-sm-6" id="js-display-trades-column"></div>

<script id="display-trades-template" type="text/x-handlebars-template">
	<table class='table table-borderless' id="js-display-trades-header">
		<caption>Recent Trades</caption>
		<thead>
			<tr>
				<td>Type</td>
				<td>Size</td>
				<td>Price</td>
				<td>Trader</td>
				<td>Client</td>
			</tr>
		</thead>
		<tbody>
	    {{#each this}}
	        <tr>            
	            <td>{{trade_type}}</td>
	            <td>{{size}}</td>
	            <td>{{price}}</td>
	            <td>{{trader_name}}</td>
	            <td>{{client_name}}</td>
	        </tr>
	    {{/each}}
		</tbody>
	</table>
</script>
