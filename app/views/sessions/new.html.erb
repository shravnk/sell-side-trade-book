  <% if @error %>
    <div id="error_explanation">
      <p><%= @error %></p>
    </div>
  <% end %>

<%= form_tag '/sessions', method: :post do %>
   <div class="form-group">
    <%= label_tag :username %>
    <br>
    <%= text_field_tag :username%>
   </div>

  <div class="form-group">
    <%= label_tag :password %>
    <br>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <br>
    <%= submit_tag "Log In" %>
  </div>
<% end %>

<%= link_to('Log in with GitHub!', '/auth/github') %>